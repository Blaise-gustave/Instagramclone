<div class="d-flex align-content-center">
<div class="card login-form mt-5" style="width: 23rem;">
  <h2 class="text-center">Instagram</h2>
  <hr>
  <div class="card-body">
    <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder:"Email" ,class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password ,placeholder:"Password" ,class:"form-control"%>
      </div>
      <div class="text-center">
        <%= f.submit "Log in" ,class:"btn btn-primary " %>
      </div>
      <p class="text-center"> Don't have an account yet? <%= link_to "Sign up",new_user_path,class:"text-decoration-none"%></p>
    <% end %>
  </div>
</div>
</div>