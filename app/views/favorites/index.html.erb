<% @favorites.each do |favorite| %>
  <% if favorite.user.id == current_user.id %>
<center>
<div class="card text-center" style="width:900px;border-radius:30px;">
 <div class="card-body">
   <h5 class="card-title"><%= favorite.user.user_name %></h5>
   <%= image_tag favorite.post.image.url, class:"upload" %><br>
   <%= link_to 'Back', posts_path, class:"btn" %>
</div><br>
<% end %>
<% end %>
</center>