<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex align-items-center">
    <div class="card sign-up-form mt-5" style="width: 24rem;">
      <h2 class="text-center">Instagram</h2>
      <hr>
      <div class="card-body">
        <div class="form-group">     
          <%= form.text_field :full_name ,placeholder: "Full Name", class:"form-control"%>
        </div>

        <div class="form-group">        
          <%= form.text_field :email, placeholder: "Email", class:"form-control" %>
        </div>

        <div class="form-group">        
          <%= form.text_field :user_name ,placeholder: "Username", class:"form-control"%>
        </div>
        <div class="form-group">        
          <%= form.password_field :password ,placeholder: "Password", class:"form-control"%>
        </div>

        <div class="actions text-center">
          <%= form.submit "Sign up" , class:"btn btn-primary "%>
        </div>
        <p class="text-center">Have an account already? <%= link_to "Login",new_session_path,class:"text-decoration-none"%></p>
      </div>
    </div>
  </div>
<% end %>
